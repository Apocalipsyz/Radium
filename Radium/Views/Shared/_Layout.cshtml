<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Open+Sans&subset=cyrillic,latin,cyrillic-ext' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="navbar-wrapper" id="navigation">
        <div class="container">
            <div class="navbar navbar-inverse navbar-fixed-top navbar-static-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/home/">Radium</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="#about">About</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                        <ul class="nav navbar-nav pull-right">
                            @if(Context.User.Identity.IsAuthenticated)
                            { 
                                <li><a href="#about">@Context.User.Identity.Name</a></li>
                            }
                            else
                            {
                                <li><a href="/home/signin/">Sign In</a></li>
                                <li><a href="/registration/">Register</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
