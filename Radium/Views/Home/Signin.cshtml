@{
    ViewBag.Title = "Signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron jumb-marg jumb-width">
    <div class="h1-help">
        <h1>Sign in</h1>
    </div>
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <div class="controls">
                <div class="col-xs-8 input-center">
                    <input type="text" class="form-control" placeholder="Имя пользователя" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="controls">
                <div class="col-xs-8 input-center">
                    <input type="text" class="form-control input-center" placeholder="Пароль" />
                </div>
            </div>
        </div>
        <div class="btn-width">
            <button type="submit" class="btn btn-primary">
                Войти
            </button>
        </div>
    }
    </div>
